<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--상태바 반투명화-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--splash 효과-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <!--login 화면-->
    <style name="AppTheme.CenterAnimation">
        <item name="android:windowBackground">@drawable/ll_face_logo</item>
    </style>

    <!--버튼 테마-->
    <style name="Button" parent="Theme.AppCompat">
        <item name="colorControlHighlight">@color/indigo_500</item>
        <item name="colorButtonNormal">@color/pink_200</item>
    </style>
    <style name="FacebookButton" parent="Theme.AppCompat">
        <item name="colorControlHighlight">#0000FF</item>
        <item name="colorButtonNormal">#3b5998</item>
    </style>
    <style name="KakaoButton" parent="Theme.AppCompat">
        <item name="colorControlHighlight">#FFBB00</item>
        <item name="colorButtonNormal">#FDED07</item>
    </style>
</resources>
